{
  "name": "superpoll-api",
  "version": "1.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc && tsc-alias",
    "debug": "node --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
    "restart": "npm run build && npm start",
    "dev": "ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpile-only --ignore-watch node_modules src/main/server.ts",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "test": "vitest --passWithNoTests",
    "test:unit": "npm test -- --reporter=dot -c vitest-unit.config.js",
    "test:integration": "npm test -- --reporter=dot -c vitest-integration.config.js",
    "test:staged": "npm test -- --run",
    "test:ci": "npm test -- --run --coverage"
  },
  "keywords": [],
  "author": "David Almeida",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.9",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-istanbul": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.1",
    "vitest": "^1.3.0",
    "vitest-mongodb": "^0.0.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "20.x"
  }
}
