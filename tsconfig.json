{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "src",
    "rootDir": "src",
    "rootDirs": [
      "src"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    },
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts"],
  "include": ["src"]
}